<UserControl
    x:Class="KintoneDeSql.Controls.FieldsControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
    xmlns:local="clr-namespace:KintoneDeSql.Controls"
    mc:Ignorable="d" 
    d:DesignHeight="450" d:DesignWidth="800"
    Loaded="_loaded"
    >
    <Grid>
        <TabControl 
            TabStripPlacement="Left"
            >
            <TabItem
                Header="Users"
                >
                <DataGrid
                    x:Name="_dataGridUsers"
                    SelectionMode="Single"
                    CanUserAddRows="False"
                    AutoGeneratingColumn="_autoGeneratingColumn"                    
                    />
            </TabItem>
            <TabItem
                Header="Organizations"
                >
                <DataGrid
                    x:Name="_dataGridOrganizations"
                    SelectionMode="Single"
                    CanUserAddRows="False"
                    AutoGeneratingColumn="_autoGeneratingColumn"                    
                    />

            </TabItem>
            <TabItem
                Header="Groups"
                >
                <DataGrid
                    x:Name="_dataGridGroups"
                    SelectionMode="Single"
                    CanUserAddRows="False"
                    AutoGeneratingColumn="_autoGeneratingColumn"                    
                    />

            </TabItem>
            <TabItem
                Header="Files"
                >
                <DataGrid
                    x:Name="_dataGridFiles"
                    SelectionMode="Single"
                    CanUserAddRows="False"
                    AutoGeneratingColumn="_autoGeneratingColumn"                    
                    />

            </TabItem>
            <TabItem
                Header="CheckBoxes"
                >
                <DataGrid
                    x:Name="_dataGridCheckBoxes"
                    SelectionMode="Single"
                    CanUserAddRows="False"
                    AutoGeneratingColumn="_autoGeneratingColumn"                    
                    />
            </TabItem>
            <TabItem
                Header="MultiSelectes"
                >
                <DataGrid
                    x:Name="_dataGridMultiSelectes"
                    SelectionMode="Single"
                    CanUserAddRows="False"
                    AutoGeneratingColumn="_autoGeneratingColumn"                    
                    />
            </TabItem>
            <TabItem
                Header="Categries"
                >
                <DataGrid
                    x:Name="_dataGridCategries"
                    SelectionMode="Single"
                    CanUserAddRows="False"
                    AutoGeneratingColumn="_autoGeneratingColumn"                    
                    />
            </TabItem>
        </TabControl>
    </Grid>
</UserControl>
