<UserControl 
    x:Class="KintoneDeSql.Controls.Apis.ApisControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
    xmlns:local="clr-namespace:KintoneDeSql.Controls.Apis"
    xmlns:control="clr-namespace:KintoneDeSql.Controls"  
    mc:Ignorable="d" 
    d:DesignHeight="450" d:DesignWidth="800"
    Loaded="_loaded"
    >
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="100"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Button
            Grid.Column="0" Grid.Row="0"
            Content="Get"    
            Click="_getClick"
            />
        <TabControl 
            Grid.Column="0" Grid.Row="1" Grid.ColumnSpan="3" 
            TabStripPlacement="Left"
            >
            <TabItem
                Header="Api"               
                >
                <control:BaseControl 
                    x:Name="_controlApi" />
            </TabItem>
            <TabItem
                Header="Schema"
                >
                <control:BaseControl 
                    x:Name="_controlSchema" />
            </TabItem>
            <TabItem
                Header="Property"
                >
                <control:BaseControl 
                    x:Name="_controlProperty" />
            </TabItem>
            <TabItem
                Header="Required"
                >
                <control:BaseControl 
                    x:Name="_controlRequired" />
            </TabItem>
        </TabControl>
    </Grid>
</UserControl>
