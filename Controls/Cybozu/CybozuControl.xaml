<UserControl 
    x:Class="KintoneDeSql.Controls.Cybozu.CybozuControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
    xmlns:local="clr-namespace:KintoneDeSql.Controls.Cybozu"
    xmlns:manager="clr-namespace:KintoneDeSql.Managers"
    xmlns:control="clr-namespace:KintoneDeSql.Controls"
    mc:Ignorable="d" 
    d:DesignHeight="450" d:DesignWidth="800"
    >
    <Grid>
        <TabControl 
            Grid.Column="0" Grid.Row="1" Grid.ColumnSpan="2" 
            TabStripPlacement="Left"
            >
            <TabItem
                Header="Users"                
                >
                <Grid >
                    <local:UserListControl />
                </Grid>
            </TabItem>
            <TabItem
                Header="Organizations"
                >
                <Grid >
                    <local:OrganizationListControl />
                </Grid>
            </TabItem>
            <TabItem
                Header="Groups"
                >
                <Grid >
                    <local:GroupListControl />
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</UserControl>
