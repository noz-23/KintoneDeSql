<UserControl
    x:Class="KintoneDeSql.Controls.SpaceControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
    xmlns:local="clr-namespace:KintoneDeSql.Controls"
    mc:Ignorable="d" 
    d:DesignHeight="450" d:DesignWidth="800"
    Loaded="_loaded"
    >
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="100"/>
            <ColumnDefinition Width="100"/>
            <ColumnDefinition Width="100"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="25"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Button
            Grid.Column="0" Grid.Row="0"
            Content="Get"    
            Click="_getClick"
            />
        <TextBlock
            Grid.Column="1" Grid.Row="0"
            Text="Space Id[max]" HorizontalAlignment="Right"
            />
        <TextBox
            x:Name="_textBox"
            Grid.Column="2" Grid.Row="0" Text="10"
            TextAlignment="Right"
            />
        <TabControl 
            x:Name="_tabControl"
            Grid.Column="0" Grid.Row="1" Grid.ColumnSpan="4" 
            TabStripPlacement="Left"
            >
            <TabItem
                Header="Space"
                >
                <DataGrid
                    x:Name="_dataGridSpace"
                    SelectionMode="Single"
                    CanUserAddRows="True"
                    AutoGeneratingColumn="_autoGeneratingColumn"                    
                    />
            </TabItem>
            <TabItem
                Header="Attached App"
                >
                <DataGrid
                    x:Name="_dataGridApp"
                    SelectionMode="Single"
                    CanUserAddRows="True"
                    AutoGeneratingColumn="_autoGeneratingColumn"                    
                    />
            </TabItem>
            <TabItem
                Header="Statics"               
                >
                <DataGrid
                    x:Name="_dataGridStatics"
                    SelectionMode="Single"
                    CanUserAddRows="True"
                    AutoGeneratingColumn="_autoGeneratingColumn"                    
                    />
            </TabItem>
        </TabControl>
    </Grid>
</UserControl>
