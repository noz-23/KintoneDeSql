<UserControl 
    x:Class="KintoneDeSql.Controls.ExecuteControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
    xmlns:local="clr-namespace:KintoneDeSql.Controls"
    mc:Ignorable="d" 
    d:DesignHeight="450" d:DesignWidth="800"
    >
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="100"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="25"/>
            <RowDefinition Height="75"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Button 
            Grid.Column="0" Grid.Row="0"
            Height="25"
            Content="excute" VerticalAlignment="Top"
            Click="_excuteClick"
            />
        <TextBlock 
            Grid.Column="1" Grid.Row="0"
            Text="Sql Query"            
            />
        <TextBox
            x:Name="_textBox"
            Grid.Column="0" Grid.Row="1" Grid.ColumnSpan="2"
            Text="select name,sql from sqlite_master where type='table' order by name;"
            />
        <DataGrid
            x:Name="_dataGrid"
            Grid.Column="0" Grid.Row="2" Grid.ColumnSpan="2"
            AutoGeneratingColumn="_autoGeneratingColumn"                    
            />
        
    </Grid>
</UserControl>
