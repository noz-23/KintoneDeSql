<UserControl 
    x:Class="KintoneDeSql.Controls.Apps.Forms.AppFormFieldControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
    xmlns:local="clr-namespace:KintoneDeSql.Controls.Apps.Forms"
    xmlns:Controls="clr-namespace:KintoneDeSql.Controls" 
    mc:Ignorable="d" 
    d:DesignHeight="450" d:DesignWidth="800"
    Loaded="_loaded"
    >
    <Grid>
        <TabControl
            TabStripPlacement="Left"
            >
            <TabItem
                Header="Field">
                <Grid >
                    <Controls:BaseControl
                        x:Name="_fieldControl" />
                </Grid>
            </TabItem>
            <TabItem
                Header="Entitry">
                <Grid >
                    <Controls:BaseControl
                        x:Name="_entityControl" />
                </Grid>
            </TabItem>
            <TabItem
                Header="Option">
                <Grid >
                    <Controls:BaseControl
                        x:Name="_optionControl" />
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</UserControl>
