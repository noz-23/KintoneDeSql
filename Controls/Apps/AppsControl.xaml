<UserControl
    x:Class="KintoneDeSql.Controls.AppsControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
    xmlns:local="clr-namespace:KintoneDeSql.Controls"
    xmlns:manager="clr-namespace:KintoneDeSql.Managers"
    mc:Ignorable="d" 
    d:DesignHeight="450" d:DesignWidth="800"
    Loaded="_loaded"
    >
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="100"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="25"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Button
            Grid.Column="0" Grid.Row="0"
            Content="Get"    
            Click="_getClick"
            />
        <TabControl 
            Grid.Column="0" Grid.Row="2" Grid.ColumnSpan="3"
            TabStripPlacement="Left"
            >
            <TabItem
                Header="AppTables"                
                >
                <DataGrid
                    x:Name="_dataGridAppTable"
                    AutoGenerateColumns="False"
                    SelectionMode="Single"
                    CanUserAddRows="True"
                    ItemsSource="{Binding ListAppTableView,Source={x:Static manager:SettingManager.Instance}, Mode=OneWay}"   
                    AutoGeneratingColumn="_autoGeneratingColumn"                    
                    >
                    <DataGrid.Columns>
                        <DataGridTextColumn
                            Header="TableName"
                            Binding="{Binding TableName, Mode=TwoWay}" 
                            >
                            <DataGridColumn.HeaderStyle>
                                <Style TargetType="DataGridColumnHeader">
                                    <Setter Property="Background" Value="Aquamarine"/>
                                </Style>
                            </DataGridColumn.HeaderStyle>
                        </DataGridTextColumn>
                        <DataGridTextColumn
                            Header="Api Id"
                            Binding="{Binding AppId, Mode=TwoWay}" 
                            >
                            <DataGridColumn.HeaderStyle>
                                <Style TargetType="DataGridColumnHeader">
                                    <Setter Property="Background" Value="Aquamarine"/>
                                </Style>
                            </DataGridColumn.HeaderStyle>
                        </DataGridTextColumn>
                        <DataGridTextColumn
                            Header="Name"
                            IsReadOnly="True"
                            Binding="{Binding Name, Mode=OneWay}" 
                        />
                        <DataGridTextColumn
                            Header="Revision"
                            IsReadOnly="True"
                            Binding="{Binding Revision, Mode=OneWay}" 
                        />
                        <DataGridTemplateColumn
                            Header="Records">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal">
                                        <Button
                                            Content="Insert" 
                                            Click="_insertAppTableClick"
                                        />
                                        <Button
                                            Content="Select" 
                                            Click="_selectAppTableClick"
                                        />
                                    </StackPanel>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                        <DataGridTextColumn
                            Header="Count"
                            IsReadOnly="True"
                            Binding="{Binding Count, Mode=OneWay}" 
                        />
                        <DataGridTextColumn
                            Header="Insert Time"
                            IsReadOnly="True"
                            Binding="{Binding RecordDateTime,StringFormat={}{0:yyyy/MM/dd HH:mm:ss},Mode=OneWay}" 
                        />
                        <DataGridTextColumn
                            Header="[App Key]"
                            Binding="{Binding ApiKey, Mode=TwoWay}" 
                        >
                            <DataGridColumn.HeaderStyle>
                                <Style TargetType="DataGridColumnHeader">
                                    <Setter Property="Background" Value="Aquamarine"/>
                                </Style>
                            </DataGridColumn.HeaderStyle>
                        </DataGridTextColumn>
                    </DataGrid.Columns>
                </DataGrid>
            </TabItem>
            <TabItem
                Header="SubTables"              
                >
                <DataGrid
                    x:Name="_dataGridSubTable"
                    SelectionMode="Single"
                    CanUserAddRows="False"
                    AutoGenerateColumns="False"
                    ItemsSource="{Binding ListSubTableView,Source={x:Static manager:SettingManager.Instance}, Mode=OneWay}"   
                    AutoGeneratingColumn="_autoGeneratingColumn"                    
                    >
                    <DataGrid.Columns>
                        <DataGridTextColumn
                            Header="TableName"
                            Binding="{Binding TableName, Mode=OneWay}" 
                        />
                        <DataGridTextColumn
                            Header="Api ID"
                            Binding="{Binding AppId, Mode=OneWay}" 
                            IsReadOnly="True"
                        />
                        <DataGridTextColumn
                            Header="Name"
                            Binding="{Binding Name, Mode=OneWay}" 
                        />
                        <DataGridTemplateColumn
                            Header="Records">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal">
                                        <Button
                                            Content="Select" 
                                            Click="_selectSubTableClick"
                                        />
                                    </StackPanel>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>

                    </DataGrid.Columns>
                </DataGrid>
            </TabItem>
            <TabItem
                Header="Fields"
                >
                <Grid >
                    <local:FieldsControl />
                </Grid>
            </TabItem>
            <TabItem
                Header="Apps"
                >
                <DataGrid
                    x:Name="_dataGridApps"
                    SelectionMode="Single"
                    CanUserAddRows="False"
                    AutoGeneratingColumn="_autoGeneratingColumn"                    
                    >
                </DataGrid>
            </TabItem>
            <TabItem
                Header="AppFormFields"
                >
                <DataGrid
                    x:Name="_dataGridAppFormFields"
                    SelectionMode="Single"
                    CanUserAddRows="False"
                    AutoGeneratingColumn="_autoGeneratingColumn"                    
                    >
                </DataGrid>
            </TabItem>
            <TabItem
                Header="AdminNotes"
                >
                <DataGrid
                    x:Name="_dataGridAdminNotes"
                    SelectionMode="Single"
                    CanUserAddRows="False"
                    AutoGeneratingColumn="_autoGeneratingColumn"                    
                    >
                </DataGrid>
            </TabItem>
            <TabItem
                Header="Statics"               
                >
                <DataGrid
                    x:Name="_dataGridStatics"
                    SelectionMode="Single"
                    CanUserAddRows="True"
                    AutoGeneratingColumn="_autoGeneratingColumn"                    
                    />
            </TabItem>
        </TabControl>
    </Grid>
</UserControl>
