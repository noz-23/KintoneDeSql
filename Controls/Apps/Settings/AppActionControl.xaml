<UserControl 
    x:Class="KintoneDeSql.Controls.Apps.Settings.AppActionControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
    xmlns:local="clr-namespace:KintoneDeSql.Controls.Apps.Settings"
    xmlns:Controls="clr-namespace:KintoneDeSql.Controls" 
    mc:Ignorable="d" 
    d:DesignHeight="450" d:DesignWidth="800"
    Loaded="_loaded"
    >
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="100"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Button 
            Grid.Column="0" Grid.Row="0"
            Content="Get"
            Click="_getClick"            
            />
        <TabControl
            Grid.Column="0" Grid.Row="1" Grid.ColumnSpan="2"
            TabStripPlacement="Left"
            >
            <TabItem
                Header="Action">
                <Grid >
                    <Controls:BaseControl
                        x:Name="_actionControl" />
                </Grid>
            </TabItem>
            <TabItem
                Header="Entitry">
                <Grid >
                    <Controls:BaseControl
                        x:Name="_entityControl" />
                </Grid>
            </TabItem>
            <TabItem
                Header="Mapping">
                <Grid >
                    <Controls:BaseControl
                        x:Name="_mappingControl" />
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</UserControl>
